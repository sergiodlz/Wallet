@model List<RecordVM>
@{
    ViewData["Title"] = "Records";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-end mb-4">
    @*<h1 class="h3 mb-0 text-gray-800">Records</h1>*@
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm pull-right"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
</div>

<!-- Content Row -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Records</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="dataTable" class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Type</th>
                        <th>Category</th>
                        <th>Account</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model)
                    {
                        <tr>
                            <td>@record.Date</td>
                            <td>@record.Description</td>
                            <td>@record.Amount.ToString("C")</td>
                            <td>@record.Type</td>
                            <td>@record.SubCategory</td>
                            <td>@record.Account</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- End of Content Row -->

@section Scripts{
    <script src="~/template/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/template/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/template/js/datatables-demo.js"></script>
}

@section Styles{
    <link href="~/template/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
